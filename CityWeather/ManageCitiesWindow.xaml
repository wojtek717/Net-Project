<Window x:Class="CityWeather.ManageCitiesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CityWeather"
        mc:Ignorable="d"
        Title="ManageCitiesWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="399" VerticalAlignment="Top" Width="772" Margin="10,10,0,0">
            <Label Content="Dodaj miasto do obserwowanych:"/>
            <StackPanel Height="30" Orientation="Horizontal">
                <TextBox TextWrapping="Wrap" Text="Wpisz miasto" Width="200" Margin="0, 0, 25 ,0" TextChanged="TextBox_TextChanged" MaxLines="1"/>
                <Button Content="Button" Width="75"/>
            </StackPanel>
            <ListBox x:Name="watchedCitiesList" Height="337" ItemsSource="{Binding}">
            <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Name}"/>
                            <Button Content="Usun z obserwowanych" Width="75"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox> 
        </StackPanel>

    </Grid>
</Window>
